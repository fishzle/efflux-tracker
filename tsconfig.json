{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "allowJs": true,
        "declaration": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "removeComments": true,
        "baseUrl": "./",
        "paths": {
          "@/*": [ "src/*" ]
        },
    },
    "exclude": [
        "**/node_modules"
    ]
}
